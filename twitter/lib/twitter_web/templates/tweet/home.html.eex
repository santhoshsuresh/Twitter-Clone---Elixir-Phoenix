font-family: 'Numans', sans-serif;
}

.page{
    background-color:white;
    padding: 15px;
    width: 80vw;
    left: 50%;
    right: 50%;
    position: relative;
    margin-left: -40vw;
    margin-top:3vw;
}

.has-search .form-control {
  padding-left: 2.375rem;
}

.has-search .form-control-feedback {
  position: absolute;
  z-index: 2;
  display: block;
  width: 2.375rem;
  height: 2.375rem;
  line-height: 2.375rem;
  text-align: center;
  pointer-events: none;
  color: #aaa;
}

