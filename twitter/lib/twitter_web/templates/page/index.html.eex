<script>window.UserName = "<%= @user %>"</script>

<head>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-show-password/1.0.3/bootstrap-show-password.min.js"></script>
</head>
<div class="login-form" id="form">

<div class="alert alert-danger" id="alert">
    <span id="alertmsg"> </span>
</div>
  Need to simulate multiple users<%= link "Click here", to: "/admin", class: "btn btn-link btn-md", target: "_blank" %>

  <h3 class="modal-title text-center bold">Welcome to Twitter</h3>       
  <br>
  <div class="form-group">
      <input type="text" id="uname" class="form-control" placeholder="Username" required="required">
  </div>
  <div class="form-group">
      <input type="password" id="pass" class="form-control" placeholder="Password" required="required" data-toggle="password"> 
  </div>
  <div class="form-group">
      <button type="submit" id="login" class="btn btn-primary btn-md btn-block">Log in</button>
      <%= link "Sign Up", to: "/user/new", class: "btn btn-secondary btn-md btn-block" %>
  </div>
  <div class="clearfix">
      <a href="#" class="pull-center">Forgot Password?</a>
  </div>     
</div>

<script>
    document.getElementById("alert").style.display = 'none';
    $("#pass").password('toggle');
</script>

